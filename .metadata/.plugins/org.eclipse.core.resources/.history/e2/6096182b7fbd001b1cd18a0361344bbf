package decisao;

import javax.swing.JOptionPane;

public class Exercicio1 {

	public static void main(String[] args) {

		String operador = JOptionPane.showInputDialog("Operador Matemático: ");
		short valor1 = Short.parseShort(JOptionPane.showInputDialog("Valor 1: "));
		short valor2 = Short.parseShort(JOptionPane.showInputDialog("Valor 2: "));

		if (operador.equals("+")){
			System.out.println("A soma dos 2 números é " + (valor1+valor2));
		}

		else if (operador.equals("-")){
			System.out.println("A soma dos 2 números é " + (valor1-valor2));
		}

		else if (operador.equals("*")){
			System.out.println("A soma dos 2 números é " + (valor1*valor2));
		}

		else if (operador.equals("/")){
			System.out.println("A soma dos 2 números é " + (valor1/valor2));
		}


		// System.out.println("O resultado é " + disciplina + " foi: " + media);



	}

}
